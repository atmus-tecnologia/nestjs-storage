{
  "name": "@atmus/nestjs-storage",
  "version": "1.0.0",
  "description": "NestJS storage library supporting AWS S3, Google Cloud Storage, Azure Blob, and local storage.",
  "author": "Atmus Tecnologia <contato@atmustecnologia.com.br>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "build": "nest build",
    "deploy": "sh ./publish.sh",
    "prepare": "husky install",
    "format": "prettier **/**/*.ts --ignore-path ./.prettierignore --write",
    "test": "jest"
  },
  "precommit": [
    "format",
    "test"
  ],
  "keywords": [
    "nestjs",
    "storage",
    "aws-s3",
    "google-cloud-storage",
    "azure-blob",
    "local-storage"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atmus-tecnologia/nestjs-storage.git"
  },
  "bugs": {
    "url": "https://github.com/atmus-tecnologia/nestjs-storage/issues"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "rxjs": "^7.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@azure/storage-blob": "^12.0.0",
    "@google-cloud/storage": "^5.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "mime-types": "^2.1.27"
  },
  "devDependencies": {
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    }
  },
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/atmus-tecnologia/nestjs-storage#readme"
}
